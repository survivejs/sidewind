{
  "/": {
    "meta": {
      "title": "Sidewind",
      "description": "Tailwind but for state"
    },
    "layout": "siteIndex",
    "dataSources": [
      {
        "name": "readme",
        "operation": "processMarkdown",
        "parameters": ["./README.md", { "skipFirstLine": true }]
      }
    ],
    "scripts": [{ "name": "global" }],
    "expand": {
      "dataSources": [
        {
          "name": "documentation",
          "operation": "indexMarkdown",
          "parameters": ["./documentation", { "skipFirstLine": true }]
        }
      ],
      "matchBy": {
        "dataSource": {
          "name": "document",
          "operation": "indexMarkdown",
          "parameters": ["./documentation", { "skipFirstLine": true }]
        },
        "slug": "data.slug"
      },
      "scripts": [{ "name": "global" }],
      "layout": "documentationPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["context", "document.data.title"]
        },
        "description": {
          "utility": "get",
          "parameters": ["context", "document.data.description"]
        }
      }
    }
  }
}
