{
  "allow": ["env", "read", "write", "net", "run"],
  "env": {
    "NO_COLOR": 1
  },
  "scripts": {
    "start": {
      "cmd": "deno run --no-check --unstable scripts/serve.ts",
      "watch": true
    },
    "build": {
      "cmd": "deno run --no-check --unstable scripts/build.ts"
    },
    "watch:build": {
      "cmd": "deno run --no-check --unstable scripts/build.ts",
      "watch": true
    }
  },
  "imap": "import_map.json"
}
